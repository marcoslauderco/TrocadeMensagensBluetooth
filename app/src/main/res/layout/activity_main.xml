<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.marcoslauder.trocademensagensbluetooth.MainActivity">

    <LinearLayout
        android:layout_width="384dp"
        android:layout_height="505dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/labelStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status: "
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Iniciando APP" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnEsperarConexao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Esperar ConexÃ£o" />

            <Button
                android:id="@+id/btnMostrarPareados"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mostrar Pareados" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnProcurarDispositivo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Procurar Dispositivo" />

            <Button
                android:id="@+id/btnTornarVisivel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tornar Visivel" />
        </LinearLayout>


        <TextView
            android:id="@+id/textViewPareados"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dispositivos Pareados (clique para conectar):"
            android:textStyle="bold" />

        <ListView
            android:id="@+id/listaPareados"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


    </LinearLayout>
</RelativeLayout>
